@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="text-danger">Oops! Something went wrong.</h1>
            <h2 class="text-danger">Error Code: @Model.RequestId</h2>
            <h3 class="text-warning">Details: @Model.Message</h3>
            <p class="text-muted">We apologize for the inconvenience. Please try again later or contact support if the issue persists.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
            <a href="mailto:support@yourwebsite.com" class="btn btn-secondary">Contact Support</a>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-warning {
        color: #ffc107;
    }

    .text-muted {
        color: #6c757d;
    }

    .btn {
        margin-top: 15px;
    }
</style>
