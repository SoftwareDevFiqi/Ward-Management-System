<style>
    /* Navbar Styles */
    .navbar-nav {
        margin-left: auto;
    }

    .nav-item {
        margin-left: 15px;
    }

    .nav-link {
        display: flex;
        align-items: center;
        color: #333;
        font-size: 16px;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #007bff;
    }

    .nav-link i {
        margin-right: 8px; /* Space between icon and text */
    }

    .dropdown-menu {
        min-width: 200px; /* Adjust width if needed */
    }

    .dropdown-item {
        padding: 10px 15px;
        font-size: 14px;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa; /* Light gray background on hover */
    }

    .dropdown-menu p {
        margin: 0;
        padding: 10px 15px;
        font-size: 14px;
        color: #333;
    }

    .dropdown-menu p:hover {
        background-color: #f8f9fa; /* Light gray background on hover */
    }

    /* Adjustments for the icons */
    .fa-sign-in-alt, .fa-sign-out-alt, .fa-user-plus, .fa-user-shield, .fa-hospital-user,
    .fa-procedures, .fa-user-nurse, .fa-user-md, .fa-stethoscope, .fa-prescription-bottle-alt,
    .fa-boxes {
        font-size: 18px; /* Adjust size of icons */
    }


    #logoutLink {
        position: relative;
        display: inline-block;
    }

        #logoutLink:hover .dropdown-menu {
            display: block;
        }

    /* Optional: Adding styles for dropdown menu */
    .dropdown-menu {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        z-index: 1000;
    }
</style>




