@model IEnumerable<TimelessTechnicians.UI.ViewModel.PatientVitalListViewModel>
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Patient Vitals List";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card glassmorphic">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Blood Pressure</th>
                        <th>Temperature</th>
                        <th>Sugar Level</th>
                        <th>Recorded Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PatientFullName</td>
                            <td>@item.BloodPressure</td>
                            <td>@item.Temperature</td>
                            <td>@item.SugarLevel</td>
                            <td>@item.RecordedDate.ToShortDateString()</td>
                            <td>
                                <a asp-action="EditVitals" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="DeleteVitals" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this vitals record?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 30px;
        max-width: 800px;
        padding: 15px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        background-color: white;
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        background-color: #f8f9fa;
    }

    /* Additional styles for responsiveness and aesthetics */
    .btn {
        margin-left: 5px; /* Small margin for buttons */
    }
</style>
