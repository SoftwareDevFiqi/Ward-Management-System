@model TimelessTechnicians.UI.ViewModel.DischargeViewModel

@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")

@{
    ViewBag.Title = "Discharge Patient";
}

<h2>Discharge Patient</h2>

<div class="content">
    <div class="card mt-4">
        <div class="card-header">
            <h4 class="mb-0"><i class="fas fa-sign-out-alt"></i> Discharge Patient</h4>
        </div>
        <div class="card-body">
            <form asp-action="Discharge" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="AdmitPatientId" class="control-label">
                        <i class="fas fa-user"></i> Select Patient
                    </label>
                    <select asp-for="AdmitPatientId" class="form-control" asp-items="Model.AdmittedPatients"></select>
                    <span asp-validation-for="AdmitPatientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DischargeDate" class="control-label">
                        <i class="fas fa-calendar-alt"></i> Discharge Date
                    </label>
                    <input asp-for="DischargeDate" class="form-control" type="date" />
                    <span asp-validation-for="DischargeDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="control-label">
                        <i class="fas fa-sticky-note"></i> Notes
                    </label>
                    <textarea asp-for="Notes" class="form-control" placeholder="Enter any notes here"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="button-container">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check-circle"></i> Discharge
                    </button>
                    <a asp-action="DischargeList" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<style>
    .content {
        margin: 20px; /* Margin around content */
    }

    .card {
        background: rgba(255, 255, 255, 0.9); /* Glassmorphism effect */
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 0.5rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        margin-top: 20px;
    }

    .card-header {
        background: rgba(0, 123, 255, 0.85); /* Card header background */
        color: white;
        padding: 15px;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem; /* Spacing between form elements */
    }

    .btn {
        margin-top: 10px; /* Space above buttons */
    }

    .text-danger {
        font-size: 0.9rem; /* Smaller font size for error messages */
    }
</style>
