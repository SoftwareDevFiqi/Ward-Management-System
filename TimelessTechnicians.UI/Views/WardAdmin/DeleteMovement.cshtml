@model TimelessTechnicians.UI.ViewModel.PatientMovementViewModel

@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container">
    <div class="card glassmorphic">
        <div class="card-body">
            <h1 class="page-title">@ViewData["Title"]</h1>

            <div class="alert alert-warning">
                <strong>Warning!</strong> You are about to delete the following movement record. This action cannot be undone.
            </div>

            <form asp-action="DeleteMovement" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="PatientFullName" class="control-label">Patient Name</label>
                    <p class="form-control-plaintext">@Model.PatientFullName</p>
                </div>
                <div class="form-group">
                    <label asp-for="MovementDate" class="control-label">Movement Date</label>
                    <p class="form-control-plaintext">@Model.MovementDate.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <p class="form-control-plaintext">@Model.Location</p>
                </div>
                <div class="form-group">
                    <label asp-for="Notes" class="control-label">Notes</label>
                    <p class="form-control-plaintext">@Model.Notes</p>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ManagePatientMovements" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Container for main content */
    .container {
        margin-top: 30px;
        max-width: 800px;
        padding: 15px;
    }

    /* Page title styling */
    .page-title {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 25px;
        font-weight: bold;
        color: #333;
    }

    /* Card and glassmorphism styling */
    .card {
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        background-color: white;
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Alert styling */
    .alert {
        margin-bottom: 20px; /* Space between alert and form */
    }

    /* Text and button styling */
    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        margin-right: 10px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
    }

    /* Media queries for responsiveness */
    /* Add any additional responsive styles if needed */
</style>
