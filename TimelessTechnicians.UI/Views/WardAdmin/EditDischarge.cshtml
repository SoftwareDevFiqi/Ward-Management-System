@model TimelessTechnicians.UI.ViewModel.DischargeViewModel
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Edit Discharge";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="card glassmorphic mb-4">
        <div class="card-header">
            <h4 class="card-title">Edit Discharge</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditDischarge" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="AdmitPatientId" class="control-label">Select Patient</label>
                    <select asp-for="AdmitPatientId" class="form-control" asp-items="Model.AdmittedPatients">
                        <option value="">Select Patient</option>
                    </select>
                    <span asp-validation-for="AdmitPatientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DischargeDate" class="control-label">Discharge Date</label>
                    <input asp-for="DischargeDate" class="form-control" type="date" />
                    <span asp-validation-for="DischargeDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="control-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="DischargeList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .container {
        margin-top: 20px;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px; /* Limits the width for better alignment */
    }

    .card-header {
        background: rgba(255, 255, 255, 0.8);
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        padding: 15px;
    }

    .card-title {
        margin: 0;
    }

    .card-body {
        background: rgba(255, 255, 255, 0.6);
        padding: 20px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .form-group {
        margin-bottom: 1.5rem; /* Space between form elements */
    }

    .btn {
        width: 100%; /* Full-width buttons for consistency */
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
    }
</style>
