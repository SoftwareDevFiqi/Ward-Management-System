@model IEnumerable<TimelessTechnicians.UI.ViewModel.PatientMovementViewModel>

@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")

@{
    ViewData["Title"] = "Manage Patient Movements";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="glassmorphic">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Patient Full Name</th>
                    <th>Movement Date</th>
                    <th>Location</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movement in Model)
                {
                    <tr>
                        <td>@movement.PatientFullName</td>
                        <td>@movement.MovementDate.ToString("dd/MM/yyyy")</td>
                        <td>@movement.Location</td>
                        <td>@movement.Notes</td>
                        <td>
                            <a asp-action="EditMovement" asp-route-id="@movement.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="DeleteMovement" asp-route-id="@movement.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this movement?');">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="RecordMovement" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 10px;
        padding: 20px;
        backdrop-filter: blur(15px);
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px; /* Space from the title */
    }

    .table th, .table td {
        vertical-align: middle; /* Center align the text vertically */
    }

    .btn {
        margin-left: 5px; /* Spacing between buttons */
    }
</style>
