@model TimelessTechnicians.UI.Models.Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<div class="container mt-4">
    <h2 class="mb-4">Delete Prescription</h2>

    <div class="alert alert-warning">
        <h4 class="alert-heading">Are you sure you want to delete this prescription?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Patient Name</dt>
            <dd class="col-sm-9">@Model.Patient.FirstName @Model.Patient.LastName</dd>

            <dt class="col-sm-3">Doctor Name</dt>
            <dd class="col-sm-9">@Model.Doctor.FirstName @Model.Doctor.LastName</dd>

            <dt class="col-sm-3">Medication</dt>
            <dd class="col-sm-9">@Model.Medication</dd>

            <dt class="col-sm-3">Dosage</dt>
            <dd class="col-sm-9">@Model.Dosage</dd>

            <dt class="col-sm-3">Date Written</dt>
            <dd class="col-sm-9">@Model.DateWritten.ToShortDateString()</dd>
        </dl>
    </div>

    <form asp-action="DeletePrescription" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="ListPrescriptions" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    /* Custom styles for the Delete Prescription page */
    .alert-heading {
        margin-bottom: 20px;
    }
</style>
