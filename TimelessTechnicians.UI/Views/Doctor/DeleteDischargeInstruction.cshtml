@model TimelessTechnicians.UI.Models.PatientInstruction
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewBag.Title = "Delete Discharge Instruction";
}

<h2>Delete Instruction for @ViewBag.PatientName</h2>

<div>
    <h4>Are you sure you want to delete this instruction?</h4>
    <div>
        <strong>Instruction:</strong> @Model.Instruction
    </div>
</div>

<form asp-action="DeleteDischargeInstruction" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListPatientInstructions" class="btn btn-secondary">Cancel</a>
    </div>
</form>
