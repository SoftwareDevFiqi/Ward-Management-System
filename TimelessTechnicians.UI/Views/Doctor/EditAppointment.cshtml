@model TimelessTechnicians.UI.Models.PatientAppointment
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container mt-4">
    <h2>Edit Appointment</h2>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <form asp-action="EditAppointment" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="AdmitPatientId" class="control-label">Select Patient</label>
            <select asp-for="AdmitPatientId" asp-items="ViewBag.AdmittedPatients" class="form-control"></select>
            <span asp-validation-for="AdmitPatientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AppointmentDate" class="control-label">Appointment Date</label>
            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Doctor ID</label>
            <input type="text" class="form-control" value="@Model.DoctorId" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Reason" class="control-label">Reason for Appointment</label>
            <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Appointment</button>
        <a asp-action="ListAppointments" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
