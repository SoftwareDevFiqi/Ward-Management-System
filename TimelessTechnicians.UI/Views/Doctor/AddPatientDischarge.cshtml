@model TimelessTechnicians.UI.Models.PatientDischarge
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Add Patient Discharge";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <form asp-action="AddPatientDischarge" method="post">
        <div class="form-group">
            <label asp-for="AdmitPatientId" class="control-label">Admitted Patient</label>
            <select asp-for="AdmitPatientId" class="form-control" asp-items="ViewBag.AdmittedPatients"></select>
            <span asp-validation-for="AdmitPatientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DischargeReason" class="control-label">Discharge Reason</label>
            <input asp-for="DischargeReason" class="form-control" />
            <span asp-validation-for="DischargeReason" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Notes" class="control-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DischargeDate" class="control-label">Discharge Date</label>
            <input asp-for="DischargeDate" class="form-control" type="date" />
            <span asp-validation-for="DischargeDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Discharge</button>
        <a asp-action="ListPatientDischarges" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
