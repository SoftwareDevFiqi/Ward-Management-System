@model TimelessTechnicians.UI.Models.PatientInstruction
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Add Patient Instruction";
}
<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <form asp-action="AddPatientInstruction" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="AdmitPatientId" class="control-label">Admitted Patient</label>
            <select asp-for="AdmitPatientId" class="form-control" asp-items="ViewBag.AdmittedPatients">
                <option value="">Select a patient</option>
            </select>
            <span asp-validation-for="AdmitPatientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Instruction" class="control-label">Instruction</label>
            <textarea asp-for="Instruction" class="form-control" rows="4" placeholder="Enter instruction here..."></textarea>
            <span asp-validation-for="Instruction" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Instruction</button>
        </div>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="ListPatientInstructions" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Optional: Add some custom styles */
    .form-group {
        margin-bottom: 1.5rem; /* Increased spacing between form groups */
    }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary color */
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d; /* Bootstrap secondary color */
        border-color: #6c757d;
    }

    .text-center {
        margin-top: 20px; /* Margin for the buttons */
    }
</style>
