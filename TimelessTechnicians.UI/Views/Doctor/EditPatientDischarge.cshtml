@model TimelessTechnicians.UI.Models.PatientDischarge
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Edit Patient Discharge";
}

<h1>@ViewData["Title"]</h1>

<!-- Display the patient's full name -->
<div class="alert alert-info">
    <strong>Editing Discharge for:</strong> @Model.AdmitPatient.Patient.FirstName @Model.AdmitPatient.Patient.LastName
</div>

<div class="container">
    <form asp-action="EditPatientDischarge" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="DischargeReason" class="control-label">Discharge Reason</label>
            <input asp-for="DischargeReason" class="form-control" />
            <span asp-validation-for="DischargeReason" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DischargeDate" class="control-label">Discharge Date</label>
            <input asp-for="DischargeDate" class="form-control" type="date" />
            <span asp-validation-for="DischargeDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Discharge</button>
        <a asp-action="ListPatientDischarges" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
