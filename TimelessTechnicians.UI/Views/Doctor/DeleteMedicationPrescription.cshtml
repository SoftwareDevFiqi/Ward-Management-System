@model TimelessTechnicians.UI.Models.MedicationPrescription

<h2>Delete Medication Prescription</h2>

<div>
    <h4>Are you sure you want to delete this medication prescription?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Patient Name</dt>
        <dd class="col-sm-10">
            @if (Model.AdmitPatient?.Patient != null) // Check for null
            {
                @Model.AdmitPatient.Patient.FirstName @Model.AdmitPatient.Patient.LastName
            }
            else
            {
                <span>N/A</span>
            }
        </dd>

        <dt class="col-sm-2">Medication</dt>
        <dd class="col-sm-10">
            @if (Model.Medication != null) // Check for null
            {
                @Model.Medication.Name
            }
            else
            {
                <span>N/A</span>
            }
        </dd>

        <dt class="col-sm-2">Dosage</dt>
        <dd class="col-sm-10">
            @Model.Dosage
        </dd>

        <dt class="col-sm-2">Date Prescribed</dt>
        <dd class="col-sm-10">
            @Model.DatePrescribed.ToString("d")
        </dd>
    </dl>

    <form asp-action="DeleteMedicationPrescription" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListMedicationPrescriptions" class="btn btn-secondary">Cancel</a>
    </form>
</div>
