@model TimelessTechnicians.UI.Models.PatientVisitSchedule
@await Html.PartialAsync("_Navbar")

@{
    ViewData["Title"] = "Edit Visit Schedule";
}

<h2 class="text-center">Edit Visit Schedule</h2>

<!-- Begin form -->
<form asp-action="EditVisitSchedule" method="post" class="container mt-4">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="AdmitPatientId" class="control-label">Patient</label>
        <select asp-for="AdmitPatientId" class="form-control select2" asp-items="ViewBag.AdmittedPatients">
            <option value="">-- Select Patient --</option>
        </select>
        <span asp-validation-for="AdmitPatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScheduledDate" class="control-label">Scheduled Date</label>
        <input asp-for="ScheduledDate" class="form-control" type="date" />
        <span asp-validation-for="ScheduledDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VisitReason" class="control-label">Visit Reason</label>
        <textarea asp-for="VisitReason" class="form-control" rows="4" placeholder="Enter the reason for the visit..."></textarea>
        <span asp-validation-for="VisitReason" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="">-- Select Status --</option>
            <option value="Scheduled">Scheduled</option>
            <option value="Completed">Completed</option>
            <option value="Canceled">Canceled</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
        <a asp-action="ListVisitSchedules" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: "-- Select Patient --",
                allowClear: true
            });
        });
    </script>
}
