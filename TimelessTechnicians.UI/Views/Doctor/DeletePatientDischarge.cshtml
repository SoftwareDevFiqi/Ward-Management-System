@model TimelessTechnicians.UI.Models.PatientDischarge
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Delete Patient Discharge";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <h4>Are you sure you want to delete this discharge record?</h4>
    <dl class="row">
        <dt class="col-sm-3">Patient Name:</dt>
        <dd class="col-sm-9">@Model.AdmitPatient.Patient.FirstName @Model.AdmitPatient.Patient.LastName</dd>

        <dt class="col-sm-3">Discharge Reason:</dt>
        <dd class="col-sm-9">@Model.DischargeReason</dd>

        <dt class="col-sm-3">Discharge Date:</dt>
        <dd class="col-sm-9">@Model.DischargeDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeletePatientDischarge" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListPatientDischarges" class="btn btn-secondary">Cancel</a>
    </form>
</div>
