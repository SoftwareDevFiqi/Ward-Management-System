@model IEnumerable<TimelessTechnicians.UI.Models.MedicationPrescription>
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Medication Prescriptions";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Medication</th>
                <th>Dosage</th>
                <th>Status</th>
                <th>Actions</th> <!-- New Actions column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model)
            {
                <tr>
                    <td>@prescription.AdmitPatient.Patient.FirstName @prescription.AdmitPatient.Patient.LastName</td>
                    <td>@prescription.Medication.Name</td>
                    <td>@prescription.Dosage</td>
                    <td>@prescription.Status</td>
                    <td>
                        <a asp-action="EditMedicationPrescription" asp-route-id="@prescription.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="DeleteMedicationPrescription" asp-route-id="@prescription.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this medication prescription?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="AddMedicationPrescription" class="btn btn-success">Add New Prescription</a>
    </div>
</div>
