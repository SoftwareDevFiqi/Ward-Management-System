@model TimelessTechnicians.UI.Models.PatientInstruction
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Delete Patient Instruction";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <h3 class="text-danger text-center">Are you sure you want to delete this instruction?</h3>

    <div class="mt-4">
        <h4>Patient Instruction Details</h4>
        <dl class="row">
            <dt class="col-sm-2">Instruction:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Instruction)</dd>

            <dt class="col-sm-2">Date Issued:</dt>
            <dd class="col-sm-10">@Model.DateIssued.ToShortDateString()</dd>

            <dt class="col-sm-2">Admitted Patient:</dt>
            <dd class="col-sm-10">
                @if (Model?.AdmitPatient?.Patient != null)
                {
                    @($"{Model.AdmitPatient.Patient.FirstName} {Model.AdmitPatient.Patient.LastName}")
                }
                else
                {
                    @("N/A")
                }
            </dd>
        </dl>

        <form asp-action="DeletePatientInstruction" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-action="ListPatientInstructions" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .text-danger {
        margin-top: 20px; /* Spacing for the warning message */
    }
</style>
