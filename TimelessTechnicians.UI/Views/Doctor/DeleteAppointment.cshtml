@model TimelessTechnicians.UI.Models.PatientAppointment
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mt-4">
    <h2>Delete Appointment</h2>

    <div class="alert alert-warning">
        <h4>Warning!</h4>
        <p>Are you sure you want to delete this appointment?</p>
    </div>

    <div class="appointment-details mb-4">
        <h5>Appointment Details:</h5>
        <p><strong>Patient:</strong> @Model.AdmitPatient.Patient.FirstName @Model.AdmitPatient.Patient.LastName</p>
        <p><strong>Appointment Date:</strong> @Model.AppointmentDate.ToString("f")</p>
        <p><strong>Reason:</strong> @Model.Reason</p>
    </div>

    <form asp-action="DeleteAppointment" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="ListAppointments" class="btn btn-secondary">Cancel</a>
    </form>
</div>
