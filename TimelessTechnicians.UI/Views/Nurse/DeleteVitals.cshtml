@model TimelessTechnicians.UI.ViewModel.PatientVitalViewModel
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Delete Vitals";
}

<div class="container">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <div class="card glassmorphic">
        <div class="card-body">
            <h4>Are you sure you want to delete this vitals record?</h4>
            <hr />

            <div>
                <h5>Blood Pressure: @Model.BloodPressure</h5>
                <h5>Temperature: @Model.Temperature</h5>
                <h5>Sugar Level: @Model.SugarLevel</h5>
                <h5>Recorded Date: @Model.RecordedDate.ToString("dd/MM/yyyy")</h5>
            </div>

            <form asp-controller="Nurse" asp-action="DeleteVitals" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="form-actions">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ListVitals" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 30px;
        max-width: 800px;
        padding: 15px;
    }

    .page-title {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 25px;
        font-weight: bold;
        color: #333;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        background-color: white;
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .form-actions {
        margin-top: 20px;
        text-align: right; /* Align buttons to the right */
    }

    .btn {
        margin-right: 10px; /* Space between buttons */
    }
</style>
