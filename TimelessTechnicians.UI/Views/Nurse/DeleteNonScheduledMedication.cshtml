@model TimelessTechnicians.UI.ViewModel.NonScheduledMedicationViewModel
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Delete Schedule 4 and Below Medication";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white text-center">
            <h5>Warning!</h5>
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this non-scheduled medication?</h4>
            <div>
                <dl class="row">
                    <dt class="col-sm-3">
                        <strong>Medication Name</strong>
                    </dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Model.MedicationName</span>
                    </dd>
                    <dt class="col-sm-3">
                        <strong>Dosage</strong>
                    </dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-light">@Model.Dosage</span>
                    </dd>
                    <dt class="col-sm-3">
                        <strong>Administered Date</strong>
                    </dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-secondary">@Model.AdministeredDate.ToShortDateString()</span>
                    </dd>
                    <dt class="col-sm-3">
                        <strong>Administered By</strong>
                    </dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-success">@Model.AdministeredBy</span>
                    </dd>
                </dl>

                <form asp-action="DeleteNonScheduledMedication" method="post" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg mx-2">Delete</button>
                    <a asp-action="ListNonScheduledMedications" class="btn btn-secondary btn-lg mx-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
        margin-top: 50px;
    }

    .card {
        border-radius: 10px;
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .badge {
        font-size: 1rem;
    }

    .btn {
        width: 120px; /* Set a consistent button width */
    }
</style>
