@model TimelessTechnicians.UI.ViewModel.PatientTreatmentListViewModel
@await Html.PartialAsync("_Navbar")

<div class="container mt-5">
    <h2 class="text-center mb-4">Confirm Deletion</h2>

    <div class="card glassmorphic">
        <div class="card-body">
            <p class="text-danger font-weight-bold">Are you sure you want to delete this treatment record? This action cannot be undone.</p>

            <h4>Patient Treatment Details</h4>
            <dl class="row">
                <dt class="col-sm-4"><strong>Patient Full Name</strong></dt>
                <dd class="col-sm-8">@Model.PatientFullName</dd>

                <dt class="col-sm-4"><strong>Treatment Description</strong></dt>
                <dd class="col-sm-8">@Model.TreatmentDescription</dd>

                <dt class="col-sm-4"><strong>Date Performed</strong></dt>
                <dd class="col-sm-8">@Model.DatePerformed.ToShortDateString()</dd>

                <dt class="col-sm-4"><strong>Status</strong></dt>
                <dd class="col-sm-8">@Model.TreatmentStatus</dd>
            </dl>

            <form asp-controller="Nurse" asp-action="DeleteTreatment" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ListTreatments" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        background-color: rgba(255, 255, 255, 0.9);
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .text-danger {
        font-size: 1.2rem; /* Larger font size for emphasis */
    }

    .container {
        max-width: 600px; /* Limit the container width */
    }
</style>
