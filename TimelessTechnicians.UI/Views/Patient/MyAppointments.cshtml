@model IEnumerable<TimelessTechnicians.UI.Models.PatientAppointment>

@{
    ViewData["Title"] = "My Appointments";
}

<h1 class="text-center my-4">My Appointments</h1>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <p class="text-center text-muted">You have no upcoming appointments.</p>
                    }
                    else
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Appointment Date</th>
                                    <th>Reason</th>
                                    <th>Status</th>
                                    <th>Doctor</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model)
                                {
                                    <tr>
                                        <td>@appointment.AppointmentDate.ToString("g")</td>
                                        <td>@appointment.Reason</td>
                                        <td>@appointment.Status</td>
                                        <td>@appointment.Doctor?.UserName</td> <!-- Assuming Doctor has a UserName property -->
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
