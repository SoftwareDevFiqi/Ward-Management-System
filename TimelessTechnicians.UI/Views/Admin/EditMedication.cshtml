@model TimelessTechnicians.UI.Models.Medication
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Edit Medication";
}

<div class="container">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <div class="card glassmorphic">
        <div class="card-header">
            <h4 class="card-title">Edit Medication</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditMedication">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MedicationId" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Medication Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter medication name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type" class="control-label">Medication Type</label>
                    <select asp-for="Type" class="form-control">
                        @foreach (var type in Enum.GetValues(typeof(MedicationType)))
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Schedule" class="control-label">Medication Schedule</label>
                    <select asp-for="Schedule" class="form-control">
                        @foreach (var schedule in Enum.GetValues(typeof(MedicationSchedule)))
                        {
                            <option value="@schedule">@schedule</option>
                        }
                    </select>
                    <span asp-validation-for="Schedule" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExpiryDate" class="control-label">Expiry Date</label>
                    <input asp-for="ExpiryDate" class="form-control" type="date" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Enter description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeletionStatus" class="control-label">Deletion Status</label>
                    <select asp-for="DeletionStatus" class="form-control">
                        @foreach (var status in Enum.GetValues(typeof(MedicationStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="DeletionStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Medications" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
        padding: 20px;
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px; /* Limits the width for better alignment */
    }

    .card-header {
        background: rgba(255, 255, 255, 0.8);
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        padding: 15px;
    }

    .card-title {
        margin: 0;
    }

    .card-body {
        background: rgba(255, 255, 255, 0.6);
        padding: 20px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .form-group {
        margin-bottom: 1.5rem; /* Space between form elements */
    }

    .btn {
        width: 100%; /* Full-width buttons for consistency */
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
    }
</style>
