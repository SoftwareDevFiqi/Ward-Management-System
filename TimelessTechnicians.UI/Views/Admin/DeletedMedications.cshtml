@model IEnumerable<TimelessTechnicians.UI.Models.Medication>

<h2>Deleted Medications</h2>


<form asp-action="BulkRestoreMedications" method="post">
    <table class="table">
        <thead>
            <tr>
                <th><input type="checkbox" id="select-all" /></th>
                <th>MedicationId</th>
                <th>Name</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Expiry Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medication in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedMedications" value="@medication.MedicationId" /></td>
                    <td>@medication.MedicationId</td>
                    <td>@medication.Name</td>
                    <td>@medication.Type</td>
                    <td>@medication.Quantity</td>
                    <td>@medication.ExpiryDate.ToShortDateString()</td>
                    <td>@medication.Description</td>
                    <td>
                        <form asp-action="RestoreMedication" method="post">
                            <input type="hidden" name="id" value="@medication.MedicationId" />
                            <button type="submit" class="btn btn-secondary">Restore</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Restore Selected</button>
</form>
