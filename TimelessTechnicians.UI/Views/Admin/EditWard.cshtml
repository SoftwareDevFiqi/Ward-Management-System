@model TimelessTechnicians.UI.Models.Ward
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Edit Ward";
}

<div class="container">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <div class="card glassmorphic">
        <div class="card-header">
            <h4 class="card-title">Edit Ward Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditWard">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WardId" />

                <div class="form-group">
                    <label asp-for="WardName" class="control-label">Ward Name</label>
                    <input asp-for="WardName" class="form-control" placeholder="Enter ward name" />
                    <span asp-validation-for="WardName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Enter ward description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WardStatus" class="control-label">Ward Status</label>
                    <select asp-for="WardStatus" class="form-control">
                        @foreach (var status in Enum.GetValues(typeof(WardStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="WardStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Capacity" class="control-label">Capacity</label>
                    <input asp-for="Capacity" class="form-control" placeholder="Enter capacity" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Wards" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
        padding: 20px;
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px; /* Limits the width for better alignment */
    }

    .card-header {
        background: rgba(255, 255, 255, 0.8);
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        padding: 15px;
    }

    .card-title {
        margin: 0;
    }

    .card-body {
        background: rgba(255, 255, 255, 0.6);
        padding: 20px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .form-group {
        margin-bottom: 1.5rem; /* Space between form elements */
    }

    .btn {
        width: 100%; /* Full-width buttons for consistency */
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
    }
</style>
