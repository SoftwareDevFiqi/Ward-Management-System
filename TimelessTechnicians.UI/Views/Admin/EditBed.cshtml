@model TimelessTechnicians.UI.Models.Bed
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Edit Bed";
}

<div class="container">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <div class="card glassmorphic">
        <div class="card-header">
            <h4 class="card-title">Edit Bed</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditBed">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BedId" />

                <div class="form-group">
                    <label asp-for="BedNumber" class="control-label">Bed Number</label>
                    <input asp-for="BedNumber" class="form-control" />
                    <span asp-validation-for="BedNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeletionStatus" class="control-label">Deletion Status</label>
                    <select asp-for="DeletionStatus" class="form-control">
                        @foreach (var status in Enum.GetValues(typeof(BedStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="DeletionStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WardId" class="control-label">Select Ward</label>
                    <select asp-for="WardId" class="form-control" asp-items="ViewBag.WardId"></select>
                    <span asp-validation-for="WardId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeletionStatus" class="control-label">Condition Status</label>
                    <select asp-for="DeletionStatus" class="form-control">
                        @foreach (var status in Enum.GetValues(typeof(ConditionStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="DeletionStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Beds" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
        padding: 20px;
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px; /* Limits the width for better alignment */
    }

    .card-header {
        background: rgba(255, 255, 255, 0.8);
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        padding: 15px;
    }

    .card-title {
        margin: 0;
    }

    .card-body {
        background: rgba(255, 255, 255, 0.6);
        padding: 20px;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    .form-group {
        margin-bottom: 1.5rem; /* Space between form elements */
    }

    .btn {
        width: 100%; /* Full-width buttons for consistency */
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
    }
</style>
