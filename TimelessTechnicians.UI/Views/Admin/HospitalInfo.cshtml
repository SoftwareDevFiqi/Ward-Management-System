@model IEnumerable<TimelessTechnicians.UI.Models.HospitalInfo>
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Hospital Information";
}

<div class="container">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="AddHospital" class="btn btn-success">Add Hospital Information</a>
    </div>

    <div class="card glassmorphic">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().HospitalName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                        <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().WebsiteUrl)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.HospitalName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.WebsiteUrl)</td>
                            <td>
                                <a asp-action="EditHospital" asp-route-id="@item.HospitalInfoId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="DeleteHospital" asp-route-id="@item.HospitalInfoId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this hospital?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .glassmorphic {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .btn {
        margin-right: 5px;
    }

    .btn-success {
        margin-bottom: 15px; /* Space below the add button */
    }
</style>
