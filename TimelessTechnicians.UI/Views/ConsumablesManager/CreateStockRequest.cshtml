@model TimelessTechnicians.UI.Models.StockRequest
@await Html.PartialAsync("_Notification")
@await Html.PartialAsync("_Navbar")
@{
    ViewData["Title"] = "Create Stock Request";
}

<div class="container mt-5">
    <h1 class="text-center">Create Stock Request</h1>

    <form asp-action="CreateStockRequest" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="ConsumableId" class="font-weight-bold"></label>
            <select asp-for="ConsumableId" class="form-control" asp-items="@(new SelectList(ViewBag.Consumables, "ConsumableId", "Name"))">
                <option value="">Select a consumable</option>
            </select>
            <span asp-validation-for="ConsumableId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RequestedQuantity" class="font-weight-bold"></label>
            <input asp-for="RequestedQuantity" class="form-control" placeholder="Enter quantity" />
            <span asp-validation-for="RequestedQuantity" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            <a asp-action="ListStockRequests" class="btn btn-secondary btn-lg ml-3">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Optional: Add some custom styles for the form */
    .container {
        max-width: 600px; /* Limit the width of the form */
    }

    .form-control {
        border-radius: 25px; /* Round the input fields */
    }

    .btn {
        border-radius: 25px; /* Round the buttons */
        padding: 10px 20px; /* Increase padding for better click area */
    }
</style>
