@{
    Layout = "_Layout";
}

@await Html.PartialAsync("_Navbar")
@await Html.PartialAsync("_Notification")

<div class="container mt-5">
    <h2 class="text-center">Consumables Dashboard Statistics</h2>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card glassmorphic shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Consumables</h5>
                    <p class="card-text" style="font-size: 2rem;">@ViewData["TotalConsumables"]</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card glassmorphic shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Stock Logs</h5>
                    <p class="card-text" style="font-size: 2rem;">@ViewData["TotalStockLogs"]</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card glassmorphic shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Low Stock</h5>
                    <p class="card-text" style="font-size: 2rem;">@ViewData["TotalLowStock"]</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card glassmorphic shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Expired</h5>
                    <p class="card-text" style="font-size: 2rem;">@ViewData["TotalExpired"]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glassmorphic {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .card {
        border-radius: 15px;
        margin-bottom: 20px;
        transition: transform 0.3s;
    }

    .card:hover {
        transform: scale(1.05);
    }
</style>
