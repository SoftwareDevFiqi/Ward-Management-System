@model TimelessTechnicians.UI.ViewModel.ChangeEmailViewModel

@{
    ViewData["Title"] = "ChangeEmail";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        footer {
            background-color: #333;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

        .footer-container {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .contact-details, .social-media {
            margin: 10px;
        }

            .contact-details h4, .social-media h4 {
                margin-bottom: 10px;
            }

            .contact-details p, .social-media a {
                margin: 5px 0;
                color: #fff;
                text-decoration: none;
            }

            .social-media a {
                display: flex;
                align-items: center;
            }

                .social-media a i {
                    margin-right: 8px;
                }

                .social-media a:hover {
                    text-decoration: underline;
                }

        .login-background {
            background-image: url('/images/last.jpeg');
            width: 400px;
            height: 400px;
            padding: 20px;
            border-radius: 10px;
            color: lightblue;
            background-size: cover;
            background-repeat: no-repeat;
        }

        body {
            background-image: url('/images/basic.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
            background-size: 100% 100%;
            color: lightblue;
        }

        h4, label, .form-check-label {
            color: lightblue;
        }

        .image-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            opacity: 0.9;
        }

            .image-grid img {
                width: 236px;
                height: 195px;
            }

        .btn i {
            margin-right: 5px; /* Spacing between the icon and the text */
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4 login-background">
            <h4>Change Email</h4>
            <form asp-action="ChangeEmail">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentEmail" class="control-label"></label>
                    <input asp-for="CurrentEmail" class="form-control" />
                    <span asp-validation-for="CurrentEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewEmail" class="control-label"></label>
                    <input asp-for="NewEmail" class="form-control" />
                    <span asp-validation-for="NewEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewEmail" class="control-label"></label>
                    <input asp-for="ConfirmNewEmail" class="form-control" />
                    <span asp-validation-for="ConfirmNewEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-envelope"></i> Change Email
                    </button>
                </div>
                <a class="btn btn-primary py-2 px-4 ms-3" href="/Account/Login">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>


            </form>
        </div>

        <div class="col-md-4">
            <div class="image-grid">
                <img src="\images\email.jpeg" alt="Image 1" />
                <img src="\images\email.jpeg" alt="Image 2" />
                <img src="\images\email.jpeg" alt="Image 3" />
                <img src="\images\email.jpeg" alt="Image 4" />
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-container">
            <div class="contact-details">
                <h4>Contact Us</h4>
                <p>Email: contact@example.com</p>
                <p>Phone: +123 456 7890</p>
                <p>Address: 123 Main Street, City, Country</p>
            </div>
            <div class="social-media">
                <h4>Follow Us</h4>
                <a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook-f"></i> Facebook</a>
                <a href="https://www.twitter.com" target="_blank"><i class="fab fa-twitter"></i> Twitter</a>
                <a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i> Instagram</a>
                <a href="https://www.linkedin.com" target="_blank"><i class="fab fa-linkedin-in"></i> LinkedIn</a>
            </div>
        </div>
    </footer>

</body>
